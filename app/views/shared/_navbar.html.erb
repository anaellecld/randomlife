<div class="navbar navbar-expand-sm navbar-light navbar-nova">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "dice.png" %>
    <strong><span id='titre-nav'> Random Life</span></strong>
  <% end %>
  <% if user_signed_in? %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="text-right">
      <li class="navbar-nav mr-auto">
        <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
        <%= link_to "My Tasks", user_assigned_tasks_path(current_user), class: "dropdown-item" %>
        <%= link_to "Group Activities", actions_path, class: "dropdown-item" %>
        <%= link_to "Dashboard", categories_path, class: "dropdown-item" %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </li>
    </ul>
  </div>

  <% else %>
  <div class="navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      <%= link_to "Login", new_user_session_path, class: "btn btn-ghost", style:'color: #4A4A4A; border-color: #4A4A4A;' %>
    </ul>
  </div>
  <% end %>
</div>

