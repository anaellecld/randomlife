<div class="container mt-3">
  <div class="row ">
    <div class="col-md-6">
      <button type="button" class="btn-ghost" data-toggle="modal" data-target="#exampleModal">Add category</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container formnew">
                <%= simple_form_for @category do |f| %>
                <%= f.input :title %>
                <%= f.input :kind, priority: [ "Task" ], collection: [ "Task", "Event"] %>
                <br>
                <%= f.button :submit, 'Create' , class:'btn btn-ghost' %>
                <% end %>
              </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>


        <% @categories.each do |category| %>
        <% category.kind == "task" %>
          <div class="card my-3">
            <% if category.image %>
            <%= image_tag category.image, style: "object-fit: cover", height: 100 %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title"><%= category.title %></h4>
              <p class='d-inline justify-content-between mr-1'>Add a task </p>
              <%= link_to "+", new_category_task_path(category), class:'btn-action' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


