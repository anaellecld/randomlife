
<div class="container dflex" style="align-content: center;">
<ul class="list-inline tabs-underlined mb-3">
  <li class="tab-underlined active">
    <%= link_to "Who?", categories_path %>
  <li>
    <%= link_to "What?", option_categories_path %>
  </li>
</ul>

  <div class="row ">
    <div class="col-md-6">
      <button type="button" class="btn-ghost mb-3" style="border: transparent;" data-toggle="modal" data-target="#exampleModal">Add a chore</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" style="color: #E46A2D;" id="exampleModalLabel">Add a category</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container formnew">
                <%= simple_form_for @category do |f| %>
                <%= f.input :title %>
                <label class="btn-ghost mb-3">
                  Add a picture!
                  <span style="display:none;">
                    <%= f.input :photo, as: :file %>
                  </span>
                </label>
                <%= f.input :photo, as: :file %>
                <%= f.input :kind, input_html:{value: "Task"}, as: :hidden %>
                <br>
                <%= f.button :submit, 'Create' , class:'btn btn-ghost' %>
                <% end %>
              </div>
              </div>

            </div>
          </div>
        </div>


        <% @categories.each do |category| %>
          <% if category.kind == "Task" %>
            <div class="card mb-3" style="border-radius: 5px;">
              <% if category.photo.attached? %>
              <%= image_tag category.photo, style: 'object-fit: cover', height: 100 %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title" style="color: #E46A2D"> <strong> <%= category.title %> </strong> </h4>
                <p class='d-inline justify-content-between mr-1' style="color: #4A4A4A"> Add a task </p>
                <%= link_to "+", new_category_task_path(category), class:'btn-action' %>
                <%= link_to "x", category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class:'btn-action', style:'position: relative; top: -158px; left: 115px; background-color: white' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

