<div class="container mt-3">
  <div class="row ">
    <div class="col-md-6">
      <button type="button" class="btn-ghost mb-3" style="background-color: white" data-toggle="modal" data-target="#exampleModal">Add category</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container formnew">
                <%= simple_form_for @category do |f| %>
                <%= f.input :title %>
                <%= f.input :photo, as: :file %>
                <br>
                <%= f.button :submit, 'Create' , class:'btn btn-ghost' %>
                <% end %>
              </div>
              </div>

            </div>
          </div>
        </div>


        <% @categories.each do |category| %>
        <% category.kind = "task" %>
          <div class="card mb-3" style="border-radius: 5px;">
            <% if category.photo.attached? %>
            <%= image_tag category.photo, style: 'object-fit: cover', height: 100 %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title" style="color: #3B5F0D"> <strong> <%= category.title %> </strong> </h4>
              <p class='d-inline justify-content-between mr-1' style="color: #4A4A4A">Add a task </p>
              <%= link_to "+", new_category_task_path(category), class:'btn-action' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


